<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blogifyer | Home</title>

  <!-- Icons & Fonts -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

  <!-- External Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>

  <style>
    :root {
      --primary: #00b894;
      --primary-dark: #009875;
      --secondary: #2d3436;
      --accent: #0984e3;
      --danger: #e17055;
      --bg-dark: #181c20;
      --card-bg: #212529;
      --text-light: #f5f6fa;
      --text-muted: #b2becd;
      --radius: 1rem;
    }

    body {
      background: var(--bg-dark);
      color: var(--text-light);
      font-family: 'Poppins', sans-serif;
      margin: 0;
      min-height: 100vh;
    }

    /* Header */
    header {
      position: sticky;
      top: 0;
      z-index: 100;
      background: rgba(24, 28, 32, 0.95);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid #2f3438;
      padding: 0.8rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    header h1 {
      font-size: 1.5rem;
      color: var(--primary);
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    header nav a {
      color: var(--text-muted);
      text-decoration: none;
      margin-left: 1.2rem;
      font-weight: 500;
      transition: color 0.2s;
    }

    header nav a:hover {
      color: var(--primary);
    }

    /* Main container */
    .main-container {
      max-width: 1200px;
      margin: 2rem auto;
      padding: 0 1rem;
    }

    .section-title {
      font-size: 1.8rem;
      margin-bottom: 1rem;
      color: var(--primary);
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    /* Blog grid */
    .blogs-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 1.5rem;
    }

    .blog-card {
      background: var(--card-bg);
      border-radius: var(--radius);
      overflow: hidden;
      border: 1px solid #2b3035;
      box-shadow: 0 8px 24px rgba(0,0,0,0.2);
      transition: transform 0.2s ease, border-color 0.2s;
    }

    .blog-card:hover {
      transform: translateY(-6px);
      border-color: var(--primary);
    }

    .blog-cover {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .blog-content {
      padding: 1.2rem 1rem 1.5rem;
    }

    .author {
      display: flex;
      align-items: center;
      margin-bottom: 0.8rem;
    }

    .author img {
      width: 42px;
      height: 42px;
      border-radius: 50%;
      margin-right: 0.8rem;
      border: 2px solid var(--primary);
    }

    .author a {
      color: var(--primary);
      font-weight: 600;
      text-decoration: none;
    }

    .blog-title {
      font-size: 1.25rem;
      font-weight: 600;
      margin: 0.5rem 0;
    }

    .blog-title a {
      color: var(--text-light);
      text-decoration: none;
    }

    .blog-title a:hover {
      color: var(--primary);
    }

    .blog-meta {
      font-size: 0.9rem;
      color: var(--text-muted);
      display: flex;
      justify-content: space-between;
      margin-bottom: 1rem;
    }

    .blog-excerpt {
      color: var(--text-muted);
      font-size: 1rem;
      line-height: 1.6;
      margin-bottom: 1rem;
    }

    .blog-excerpt a {
      color: var(--primary);
      text-decoration: none;
    }

    .blog-actions {
      display: flex;
      gap: 0.6rem;
      flex-wrap: wrap;
    }

    .btn {
      border: none;
      outline: none;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      background: var(--primary);
      color: #fff;
      cursor: pointer;
      font-size: 0.95rem;
      display: flex;
      align-items: center;
      gap: 0.4rem;
      transition: background 0.2s, transform 0.2s;
    }

    .btn:hover {
      background: var(--primary-dark);
      transform: scale(1.05);
    }

    .btn-secondary {
      background: var(--secondary);
    }

    .btn-danger {
      background: var(--danger);
    }

    .no-blogs {
      text-align: center;
      font-size: 1.1rem;
      color: var(--text-muted);
      margin-top: 3rem;
    }

    @media (max-width: 600px) {
      header {
        flex-direction: column;
        gap: 0.7rem;
        padding: 1rem;
      }
      .section-title {
        font-size: 1.4rem;
      }
    }
  </style>
</head>
<body>

  <%- include('partials/header', { user }) %>

  <main class="main-container">
    <h2 class="section-title"><i class="fas fa-blog"></i> Latest Blogs</h2>

    <% if (success_msg) { %>
      <div class="alert alert-success"><i class="fas fa-check-circle"></i> <%= success_msg %></div>
    <% } %>
    <% if (error_msg) { %>
      <div class="alert alert-error"><i class="fas fa-exclamation-circle"></i> <%= error_msg %></div>
    <% } %>

    <% if (blogs.length === 0) { %>
      <p class="no-blogs">No blogs found. <a href="/blog/addBlog" style="color:var(--primary);">Create one now!</a></p>
    <% } else { %>
      <div class="blogs-grid">
        <% blogs.forEach(blog => { %>
          <div class="blog-card">
            <% if (blog.coverImage) { %>
              <img src="<%= blog.coverImage %>" alt="Cover" class="blog-cover">
            <% } %>
            <div class="blog-content">
              <div class="author">
                <img src="<%= blog.createdBy.profileImageURL %>" alt="<%= blog.createdBy.fullname %>">
                <div>
                  <a href="/profile/<%= blog.createdBy._id %>"><%= blog.createdBy.fullname %></a><br>
                  <small style="color:var(--text-muted);"><%= moment(blog.createdAt).fromNow() %></small>
                </div>
              </div>
              <div class="blog-title">
                <a href="/blog/<%= blog._id %>"><%= blog.title %></a>
              </div>
              <div class="blog-meta">
                <span><i class="fas fa-heart"></i> <%= blog.likes.length %></span>
                <span><i class="fas fa-comments"></i> <%= blog.totalComments %></span>
              </div>
              <div class="blog-excerpt">
                <%= blog.body.length > 180 ? blog.body.substring(0, 180) + '...' : blog.body %>
                <a href="/blog/<%= blog._id %>">Read more</a>
              </div>
              <div class="blog-actions">
                <% if (user) { %>
                  <button class="btn <%= blog.likes.some(l => l._id.toString() === user._id.toString()) ? 'btn-danger' : '' %> ajax-like-btn" data-blog-id="<%= blog._id %>">
                    <i class="fas fa-heart"></i>
                    <%= blog.likes.some(l => l._id.toString() === user._id.toString()) ? 'Unlike' : 'Like' %>
                  </button>
                  <% if (!blog.isOwn) { %>
                    <button class="btn ajax-follow-btn" data-user-id="<%= blog.createdBy._id %>">
                      <i class="fas fa-user-plus"></i> Follow
                    </button>
                  <% } %>
                <% } %>
                <a href="/blog/<%= blog._id %>" class="btn btn-secondary"><i class="fas fa-book-open"></i> Read</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </main>

  <script>
    // Placeholder for interactions like likes, follows, dropdowns etc.
  </script>
</body>
</html>
