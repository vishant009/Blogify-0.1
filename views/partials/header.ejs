<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
  <style>
    /* ... your existing styles ... */

    /* --- Search Animation Styles --- */
    .search-container {
      position: relative;
      margin-left: 1rem;
      display: flex;
      align-items: center;
    }
    .search-icon-btn {
      background: none;
      border: none;
      color: var(--text-primary);
      font-size: 1.3rem;
      cursor: pointer;
      padding: 0.45rem;
      border-radius: 50%;
      transition: background 0.2s;
      z-index: 10;
    }
    .search-icon-btn:focus {
      outline: none;
      background: var(--hover-color);
    }
    .animated-search-form {
      position: absolute;
      right: 0;
      top: 50%;
      transform: translateY(-50%) scaleX(0);
      transform-origin: right;
      background: var(--card-bg);
      border: 1px solid var(--border-color);
      border-radius: 30px;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.35rem 0.8rem 0.35rem 1.2rem;
      transition: transform 0.38s cubic-bezier(0.68, -0.55, 0.27, 1.55), opacity 0.2s;
      opacity: 0;
      min-width: 220px;
      box-shadow: 0 2px 18px 0 rgba(0,0,0,0.13);
      z-index: 9;
    }
    .animated-search-form.open {
      transform: translateY(-50%) scaleX(1);
      opacity: 1;
    }
    .animated-search-form input {
      background: transparent;
      border: none;
      color: var(--text-primary);
      font-size: 0.97rem;
      width: 140px;
      transition: width 0.3s;
    }
    .animated-search-form input:focus {
      outline: none;
      width: 200px;
    }
    .animated-search-form button {
      background: var(--primary-color);
      border: none;
      color: #fff;
      padding: 0.42rem 0.92rem;
      border-radius: 16px;
      font-size: 1rem;
      cursor: pointer;
      transition: background 0.2s;
    }
    .animated-search-form button:hover {
      background: #2980b9;
    }

    @media (max-width: 768px) {
      .search-container {
        margin-left: 0.5rem;
      }
      .animated-search-form {
        min-width: 100vw;
        right: -1rem;
      }
    }
    /* --- End Search Animation Styles --- */
  </style>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Hamburger menu
      const hamburger = document.querySelector('.hamburger');
      const navMenu = document.querySelector('nav ul.main-nav');
      const dropdownToggle = document.querySelector('.dropdown-toggle');
      const dropdownMenu = document.querySelector('.dropdown-menu');

      if (hamburger && navMenu) {
        hamburger.addEventListener('click', () => {
          navMenu.classList.toggle('active');
        });
      }

      if (dropdownToggle && dropdownMenu) {
        dropdownToggle.addEventListener('click', () => {
          dropdownMenu.classList.toggle('active');
        });

        document.addEventListener('click', (e) => {
          if (!dropdownToggle.contains(e.target) && !dropdownMenu.contains(e.target)) {
            dropdownMenu.classList.remove('active');
          }
        });
      }

      // --- Search Animation Logic ---
      const searchIconBtn = document.querySelector('.search-icon-btn');
      const searchForm = document.querySelector('.animated-search-form');
      const searchInput = searchForm ? searchForm.querySelector('input[name="q"]') : null;

      if (searchIconBtn && searchForm && searchInput) {
        let isOpen = false;
        searchIconBtn.addEventListener('click', (e) => {
          e.stopPropagation();
          isOpen = !isOpen;
          searchForm.classList.toggle('open');
          if (isOpen) {
            setTimeout(() => searchInput.focus(), 230);
          } else {
            searchForm.reset();
          }
        });

        // Close on click outside
        document.addEventListener('click', (e) => {
          if (isOpen && !searchForm.contains(e.target) && !searchIconBtn.contains(e.target)) {
            searchForm.classList.remove('open');
            isOpen = false;
            searchForm.reset();
          }
        });

        // Optional: close on Esc key
        searchInput.addEventListener('keydown', (e) => {
          if (e.key === 'Escape') {
            searchForm.classList.remove('open');
            isOpen = false;
            searchForm.reset();
          }
        });
      }
      // --- End Search Animation Logic ---
    });
  </script>
</head>
<body>
  <header>
    <nav>
      <a href="/" class="logo"><i class="fas fa-blog"></i> Blogify</a>
      <button class="hamburger"><i class="fas fa-bars"></i></button>
      <ul class="main-nav">
        <li><a href="/"><i class="fas fa-home"></i> Home</a></li>
        <% if (user) { %>
          <li><a href="/blog/addBlog"><i class="fas fa-plus"></i> Add Blog</a></li>
        <% } else { %>
          <li><a href="/user/signin"><i class="fas fa-sign-in-alt"></i> Sign In</a></li>
          <li><a href="/user/signup"><i class="fas fa-user-plus"></i> Sign Up</a></li>
        <% } %>
      </ul>
      <% if (user) { %>
        <div class="dropdown">
          <button class="dropdown-toggle">
            <img src="<%= user.profileImageURL %>" alt="Profile" class="profile-avatar">
            <%= user.fullname %>
            <i class="fas fa-chevron-down"></i>
          </button>
          <div class="dropdown-menu">
            <a href="/profile"><i class="fas fa-user"></i> Profile</a>
            <a href="/notification"><i class="fas fa-bell"></i> Notifications</a>
            <a href="/settings"><i class="fas fa-cog"></i> Settings</a>
            <a href="/user/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
          </div>
        </div>
      <% } %>
      <!-- Animated Search Bar -->
      <div class="search-container">
        <button class="search-icon-btn" title="Search"><i class="fas fa-search"></i></button>
        <form action="/search" method="GET" class="animated-search-form" autocomplete="off">
          <input type="text" name="q" placeholder="Search users or blogs..." aria-label="Search" />
          <button type="submit"><i class="fas fa-arrow-right"></i></button>
        </form>
      </div>
      <!-- End Animated Search Bar -->
    </nav>
  </header>
</body>
</html>
